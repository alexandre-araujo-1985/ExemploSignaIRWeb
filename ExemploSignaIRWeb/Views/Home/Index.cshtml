@page


<div class="container">
	<div class="row p-1">
		<div class="col-1">
			Usuário
		</div>
		<div class="col-5">
			<input type="text" id="userInput" />
		</div>
	</div>
	<div class="row p-1">
		<div class="col-1">
			Mensagem
		</div>
		<div class="col-5">
			<input type="text" class="w-100" id="messageInput" />
		</div>
	</div>
	<div class="row p-1">
		<div class="col-6 text-end">
			<input type="button" class="btn btn-primary" id="sendButton" value="Enviar Mensagem" />
		</div>
	</div>
	<div class="row p-1">
		<div class="col-6">
			<hr />
		</div>
	</div>
	<div class="row p-1">
		<div class="col-6">
			<ul id="messagesList"></ul>
		</div>
	</div>
</div>

